global proc zbw_groupOrient(){string $selected[];$selected  = `ls -sl`;int $objs = `size $selected`;if ($objs != 2) {	warning ("selected target then orientee. Only two objects, please");	}	else	{select ($selected[1]);group -n ($selected[1]+ "_GRP");xform -piv 0 0 0;select -r $selected[0];select -add ($selected[1]+ "_GRP");pointConstraint -offset 0 0 0 -weight 1;orientConstraint -offset 0 0 0 -weight 1;select -r (($selected[1]+"_GRP") + "_pointConstraint1");delete;select -r (($selected[1]+"_GRP") + "_orientConstraint1");delete;select -cl;	}	}zbw_groupOrient();